<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/tv_1"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="学习通"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#1E88E5"
        android:textStyle="bold"
        android:background="@drawable/bg_text"
        android:textSize="35sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="30dp"
        android:background="#999999" />
    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_user" />

        <TextView
            android:id="@+id/et_user"
            android:text=""
            android:textSize="22dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:layout_width="270dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_school"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_school"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_school" />

        <TextView
            android:id="@+id/et_school"
            android:text=""
            android:textSize="22dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:layout_width="270dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="30dp"
        android:background="#999999" />
    <RelativeLayout
        android:id="@+id/rl_finish"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/iv_finish"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_text2"
            android:text="已学习:"
            android:gravity="center"
            android:textColor="#0988F7"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/et_finish"
            android:text=""
            android:textSize="22dp"
            android:layout_alignParentRight="true"
            android:textColor="#0988F7"
            android:gravity="center"
            android:layout_width="190dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_begin"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/iv_begin"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_text3"
            android:text="未学习:"
            android:gravity="center"
            android:textColor="#F7098C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/et_begin"
            android:text=""
            android:textSize="22dp"
            android:layout_alignParentRight="true"
            android:textColor="#F7098C"
            android:layout_width="190dp"
            android:gravity="center"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout> 